{
  "name": "firetruck",
  "version": "0.0.4",
  "description": "Firestore Reconnect Reimagined",
  "main": "main.js",
  "scripts": {
    "test": "jest",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never"
  },
  "author": "Kodebineri Software <kodebineri@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "electron": "^16.0.7",
    "electron-builder": "^23.0.3",
    "electron-notarize": "^1.2.1",
    "jest": "^27.4.7"
  },
  "dependencies": {
    "csv-parse": "^5.0.4",
    "csvtojson": "^2.0.10",
    "electron-context-menu": "^3.1.1",
    "firebase": "^9.6.6",
    "firebase-admin": "^10.0.1",
    "firesql": "^2.0.2"
  },
  "build": {
    "appId": "com.kodebineri.firetruck",
    "productName": "FireTruck",
    "buildVersion": 17,
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.developer-tools",
      "provisioningProfile": "firetruckprovisioningprofile.provisionprofile",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "mas",
          "arch": "universal"
        }
      ]
    },
    "mas": {
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.plist"
    },
    "linux": {
      "category": "Development",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "snap",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
